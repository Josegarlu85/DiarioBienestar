<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mi_Diario_de_Bienestar.Pages.RegistroPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Registro Diario"
    BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label Text="Registrar mi día"
                   FontSize="28"
                   TextColor="#FFA500"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <DatePicker x:Name="FechaPicker"
                        TextColor="#FFFFFF"
                        BackgroundColor="#1F1F1F"
                        HorizontalOptions="FillAndExpand"/>

            <Editor x:Name="EditorDescripcion"
                    HeightRequest="150"
                    Placeholder="Escribe aquí cómo ha sido tu día..."
                    PlaceholderColor="#FFA500"
                    TextColor="#FFFFFF"
                    BackgroundColor="#2C2C2C"/>

            <!-- Slider Actividad Física -->
            <Label Text="Actividad Física (0 a 10)"
                   TextColor="#FFA500"
                   FontAttributes="Bold"/>
            <Grid>
                <Slider x:Name="SliderActividad"
                        Minimum="0"
                        Maximum="10"
                        ValueChanged="SliderActividad_ValueChanged"
                        BackgroundColor="#333333"
                        ThumbColor="#FF4500"
                        HorizontalOptions="FillAndExpand"/>
                <Label x:Name="LabelSliderValor"
                       Text="0"
                       TextColor="#FFFFFF"
                       BackgroundColor="#FF4500"
                       FontAttributes="Bold"
                       Padding="6,2"
                       HorizontalOptions="End"
                       VerticalOptions="Center"/>
            </Grid>
            <ProgressBar x:Name="BarraActividad"
                         Progress="0"
                         BackgroundColor="#333333"
                         ProgressColor="#FF4500"
                         HeightRequest="10"/>

            <!-- Stepper  Nivel de Energía -->
            <Label Text="Nivel de Energía (1 a 5)"
                   TextColor="#FFA500"
                   FontAttributes="Bold"/>
            <Grid ColumnSpacing="10" VerticalOptions="Center" HorizontalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <Button Text="-"
                        BackgroundColor="#FF4500"
                        TextColor="White"
                        FontAttributes="Bold"
                        Clicked="BotonMenos_Clicked"
                        Grid.Column="0"/>

                <Label x:Name="LabelStepperValor"
                       Text="1"
                       TextColor="#FFFFFF"
                       BackgroundColor="#32CD32"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       Grid.Column="1"/>

                <Button Text="+"
                        BackgroundColor="#32CD32"
                        TextColor="White"
                        FontAttributes="Bold"
                        Clicked="BotonMas_Clicked"
                        Grid.Column="2"/>
            </Grid>

            <Button Text="Guardar Registro"
        BackgroundColor="#FF4500"
        TextColor="#FFFFFF"
        FontAttributes="Bold"
        HeightRequest="50"
        HorizontalOptions="FillAndExpand"
        Clicked="ButtonGuardar_Clicked"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
